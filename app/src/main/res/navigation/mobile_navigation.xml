<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.example.moviesapp.ui.movies.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/navigation_series"
        android:name="com.example.moviesapp.ui.series.SeriesFragment"
        android:label="Series"
        tools:layout="@layout/fragment_series" />

    <fragment
        android:id="@+id/navigation_drama"
        android:name="com.example.moviesapp.ui.drama.DramaFragment"
        android:label="Drama"
        tools:layout="@layout/fragment_drama" />
    <fragment
        android:id="@+id/navigation_scifi"
        android:name="com.example.moviesapp.ui.scifi.SciFiFragment"
        android:label="SciFi"
        tools:layout="@layout/fragment_scifi" />
    <fragment
        android:id="@+id/navigation_comedy"
        android:name="com.example.moviesapp.ui.comedy.ComedyFragment"
        android:label="Comedy"
        tools:layout="@layout/fragment_comedy" />
